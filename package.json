{
  "name": "ts-auto-guard",
  "version": "1.0.0-alpha.3",
  "description": "Generate type guard functions from TypeScript interfaces",
  "homepage": "https://github.com/rhys-vdw/ts-auto-guard",
  "main": "lib/index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test && npm run format:check && tape -r ts-node/register tests/**/*.ts | tap-diff",
    "build": "tsc",
    "prepare": "npm run build",
    "format": "tslint --fix --project ./tsconfig.json && prettier --write src/**/*.ts",
    "format:check": "prettier --list-different src/**/*.ts"
  },
  "bin": {
    "ts-auto-guard": "./lib/cli.js"
  },
  "author": "Rhys van der Waerden",
  "license": "MIT",
  "dependencies": {
    "@ts-morph/common": "^0.6.0",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.0",
    "lodash": "^4.17.20",
    "make-error": "^1.3.4",
    "ts-morph": "^7.3.0",
    "tsconfig": "^7.0.0",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-usage": "^5.0.1",
    "@types/lodash": "^4.14.160",
    "@types/node": "^14.6.0",
    "@types/tape": "^4.2.32",
    "@types/uglify-js": "^3.0.3",
    "cross-env": "^7.0.2",
    "prettier": "2.0.5",
    "tap-diff": "^0.1.1",
    "tape": "^5.0.1",
    "ts-node": "^8.0.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "uglify-js": "^3.4.9"
  }
}
